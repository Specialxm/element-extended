{
  "name": "nova-admin",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "workspaces": [
    "apps/*"
  ],
  "scripts": {
    "build": "run-p type-check \"build-only {@}\" \"build:admin {@}\" --",
    "build:admin": "pnpm run -C apps/web-admin build",
    "build-only": "vite build",
    "dev": "vite-run dev",
    "dev:admin": "pnpm --filter admin dev",
    "dev:mock": "pnpm --filter mock start",
    "postinstall": "pnpm -r run stub --if-present",
    "preview": "vite preview",
    "type-check": "vue-tsc --build",
    "lint": "eslint . --fix",
    "format": "prettier --write src/",
    "test:unit": "vitest run --dom",
    "catalog": "pnpx codemod pnpm/catalog",
    "commit": "czg",
    "commitlint": "commitlint --edit"
  },
  "devDependencies": {
    "@nova/commitlint-config": "workspace:*",
    "@nova/eslint-config": "workspace:*",
    "@nova/mock": "workspace:*",
    "@nova/prettier-config": "workspace:*",
    "@nova/shared": "workspace:*",
    "@nova/shared-utils": "workspace:*",
    "@nova/stylelint-config": "workspace:*",
    "@nova/tsconfig": "workspace:*",
    "@nova/ui": "workspace:*",
    "@nova/vite-run": "workspace:*",
    "@tsconfig/node22": "catalog:",
    "@types/node": "catalog:",
    "@vitejs/plugin-vue": "catalog:",
    "@vitejs/plugin-vue-jsx": "catalog:",
    "@vue/tsconfig": "catalog:",
    "happy-dom": "^18.0.1",
    "jiti": "catalog:",
    "npm-run-all2": "catalog:",
    "pinia": "catalog:",
    "prettier": "catalog:",
    "typescript": "catalog:",
    "unbuild": "catalog:",
    "vite": "catalog:",
    "vite-plugin-vue-devtools": "catalog:",
    "vitest": "catalog:",
    "vue": "catalog:",
    "vue-router": "catalog:",
    "vue-tsc": "catalog:"
  },
  "engines": {
    "node": "^20.19.0 || >=22.12.0"
  },
  "lint-staged": {
    "*": [
      "prettier --write --ignore-unknown",
      "git add"
    ],
    "*.{js,ts,jsx,tsx,vue}": [
      "eslint --fix",
      "prettier --write",
      "git add"
    ],
    "*.vue": [
      "eslint --fix",
      "prettier --write",
      "git add"
    ],
    "*.{css,scss,sass,less}": [
      "prettier --write",
      "git add"
    ],
    "*.{json,jsonc}": [
      "prettier --write",
      "git add"
    ],
    "*.md": [
      "prettier --write",
      "git add"
    ],
    "*.{yml,yaml}": [
      "prettier --write",
      "git add"
    ]
  }
}